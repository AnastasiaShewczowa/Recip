<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:id="@+id/food_holder"
    android:clickable="true"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeWidth="2dp"
    android:background="#5C7073"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_background"
        android:layout_marginTop="30dp"
        android:background="#CED2EA">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="Клубничный салат с сыром"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-190dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/food_90" />

        <TextView
            android:id="@+id/tv_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="105dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1 порции: 182 ККал"
            android:textColor="@color/black"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-141dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/tv_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Время приготовления: 20 минут"
            android:textColor="@color/black"
            android:textSize="11dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/ingred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="250dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Ингредиенты"
        android:textColor="@color/black"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="250dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Рецепт"
        android:textColor="@color/black"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:src="@drawable/popular1" />


</com.google.android.material.card.MaterialCardView>