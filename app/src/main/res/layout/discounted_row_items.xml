<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_holder"
    android:layout_width="120dp"
    android:layout_height="110dp"
    android:layout_marginHorizontal="5dp"
    android:backgroundTint="@color/white"
    android:outlineAmbientShadowColor="@color/gray_dark"
    android:outlineSpotShadowColor="@color/mirage"
    app:cardCornerRadius="30dp"
    app:cardElevation="15dp"
    app:strokeColor="#E4E4E4"
    app:strokeWidth="1.5dp">

    <LinearLayout
        android:id="@+id/ll_background_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/categoryImage1"
            android:layout_width="70dp"
            android:layout_height="70dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/klubnika" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Клубника"/>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>